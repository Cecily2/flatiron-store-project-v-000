<h2>Categories</h2>
<ul>
  <% @categories.each do |category| %>
  <li><%= link_to category.title, category_path(category) %></li>
  <% end %>
</ul>


<h2>Items</h2>
<% @items.each do |item| %>
  <p><%= item.title %> | <%= number_to_currency(item.get_price) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %>   --  <%= item.inventory %> available </p>
<% end %>